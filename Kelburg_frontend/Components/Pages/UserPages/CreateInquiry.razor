@page "/createInquiry"
@using Kelburg_frontend.Services
@inject NavigationManager NavigationManager
@inject AuthService AuthService

<div class="box-container">
    <h1><strong>Create Inquiry</strong></h1>

    <label for="category">Category*</label>
    <select id="category" @bind="SelectedCategory" class="custom-dropdown">
        @foreach (string category in Categories)
        {
            <option value="@category">@category</option>
        }
    </select>

    <label for="message">Message*</label>
    <textarea id="message" @bind="Description" class="description-textarea" placeholder="Enter Your Message Here..."></textarea>

    @if (fieldEmpty)
    {
        <p class="field-required-msg">All fields are required</p>
    }
    
    <button class="confirm-btn" @onclick="SendInquiry">Submit Inquiry</button>
</div>

@if (TicketCreated)
{
<div class="modal-overlay">
    <div class="modal-box">
        <h2>Inquiry Submitted!</h2>
        <p>Thank you for reaching out. We will review your inquiry and get back to you.</p>
        <button class="close-btn" @onclick="CloseModal">To Home</button>
    </div>
</div>
}

<style>
    .box-container {
        width: 50%;
        margin: 3rem auto;
        background-color: #d9d9d9;
        padding: 2rem;
        border-radius: 25px;
        text-align: center;
        font-family: "Albert Sans", sans-serif;
        box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
    }
    
    .field-required-msg {
        color: red;
        font-size: 0.8rem;
        margin-top: 0.5rem;
    }

    h1 {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }

    label {
        display: block;
        font-weight: bold;
        margin: 0.8rem 0 0.3rem;
        text-align: left;
    }

    .custom-dropdown {
        width: 100%;
        padding: 0.8rem;
        font-size: 1rem;
        border: none;
        border-radius: 25px;
        box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }

    .description-textarea {
        width: 100%;
        height: 150px;
        padding: 0.8rem;
        font-size: 1rem;
        border-radius: 25px;
        border: none;
        box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.2);
        resize: none;
    }

    .confirm-btn {
        background-color: #c59d5f;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: bold;
        color: black;
        cursor: pointer;
        margin-top: 1rem;
    }

    .confirm-btn:hover {
        background-color: #b58c4f;
    }
    
    .confirm-btn:active {
        transform: translateY(2px);
    }

    .modal-overlay {
        font-family: "Albert Sans", sans-serif;
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 100vw;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 999;
    }

    .modal-box {
        background-color: #d9d9d9;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.3);
        text-align: center;
        width: 80%;
        max-width: 400px;
        animation: fadeIn 0.3s ease-in-out;
    }

    .modal-box h2 {
        margin-bottom: 1rem;
        font-size: 1.5rem;
    }

    .modal-box p {
        margin-bottom: 1.5rem;
    }

    .close-btn {
        background-color: #c59d5f;
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 2rem;
        font-weight: bold;
        color: black;
        cursor: pointer;
    }

    .close-btn:hover {
        background-color: #b58c4f;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }
</style>